{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.test.json"
    }
  ]
}
