{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
